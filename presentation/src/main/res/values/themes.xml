<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RoboticsGuide" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Menu.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primaryContainer</item>
    </style>

    <style name="Theme.RoboticsGuide" parent="Base.Theme.RoboticsGuide" />

    <style name="TransparentBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <!-- Настройка стиля bottom sheet -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item> <!-- Отключение затемнения фона -->
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_hideable">false</item>
        <item name="behavior_peekHeight">100dp</item>
    </style>

</resources>