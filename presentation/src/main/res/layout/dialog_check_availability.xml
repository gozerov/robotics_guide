<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_component_dialog"
    android:orientation="vertical"
    android:paddingVertical="@dimen/_16dp"
    android:scrollbars="none"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <View
            android:layout_width="@dimen/_32dp"
            android:layout_height="@dimen/_4dp"
            android:background="@drawable/bg_dialog_tongue"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/calculateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_32dp"
            android:layout_marginTop="@dimen/_32dp"
            android:background="@drawable/bg_calculate_button"
            android:drawablePadding="@dimen/_8dp"
            android:text="@string/to_calculate"
            android:textAllCaps="false"
            android:textColor="@color/surface"
            app:backgroundTint="@null"
            app:icon="@drawable/ic_calculation_18"
            app:iconGravity="textStart"
            app:iconTint="@color/surface" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/componentsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_32dp"
            android:background="@drawable/bg_components_list"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/showAllButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_32dp"
            android:background="@drawable/bg_calculate_button"
            android:drawablePadding="@dimen/_8dp"
            android:text="@string/show_all"
            android:textAllCaps="false"
            android:textColor="@color/surface"
            app:backgroundTint="@null"
            app:icon="@drawable/ic_show_18"
            app:iconGravity="textStart"
            app:iconTint="@color/surface" />

    </LinearLayout>

</ScrollView>