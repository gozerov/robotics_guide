<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_24dp"
        android:orientation="vertical"
        android:gravity="center"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/bg_compare_table_dialog">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sp"
            android:text="@string/found_components"
            android:textColor="@color/secondary"
            android:layout_marginTop="@dimen/_24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_24dp">

            <ListView
                android:id="@+id/foundComponentsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_4dp"
                android:scrollbars="none"
                android:background="@drawable/bg_found_components"/>

            <ListView
                android:id="@+id/neededComponentsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_4dp"
                android:scrollbars="none"
                android:background="@drawable/bg_undfound_components"/>

        </LinearLayout>

        <Button
            android:id="@+id/dismissButton"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_56dp"
            android:text="@string/ok"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@drawable/bg_dismiss_button"
            android:layout_marginVertical="@dimen/_16dp"/>

    </LinearLayout>

</FrameLayout>