<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/localFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavView"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:navGraph="@navigation/tabs_graph"
        app:defaultNavHost="true"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/nav_menu"
        app:itemPaddingTop="@dimen/_8dp"
        android:paddingVertical="@dimen/_4dp"
        app:itemActiveIndicatorStyle="@style/Menu.Indicator"
        app:itemRippleColor="@color/surface"
        app:itemTextColor="@color/secondary"
        app:itemIconTint="@color/secondary"
        android:background="@color/surface"/>

</androidx.constraintlayout.widget.ConstraintLayout>